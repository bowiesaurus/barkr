<div class ="row">
  <div class="large-12 columns">
    <div class="row">
      <% @pets.each do |pet| %>
      <div class="large-4 small-6 columns pull-left">
        <%= image_tag(pet.profile_photo) %>
        <p class="pet-title"><%= link_to pet.name, pet_path(pet.id) %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<% if owner_signed_in? %>
<div class="row">
<% @pets.each do |pet| %>
  <div>
    <%= link_to "Skip", pets_path %>
    <%= link_to "Wag", pet_friendships_path(pet), method: :post %>
  </div>
  <% end %>
</div>

<div class="text-center">
<%= link_to 'Create Pet Profile!', new_pet_path %>
</div>
<% end %>
