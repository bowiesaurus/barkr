<h1>My Puppy Pals</h1>

<ul>
  <% @friendships.each do |friendship| %>
    <li>
      <%= friendship.friend.name %>:
      <%= link_to 'Message', new_pet_friendship_message_path(friendship.friend, friendship) %>
      (<%= link_to 'Un-Pal', friendship_path(friendship), method: :delete %>)
    </li>
  <% end %>
</ul>

